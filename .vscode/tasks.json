// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch:desktop",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build"
			}
		},
		{
      		"label": "watch:web",
      		"dependsOn": ["npm: watch:web:tsc", "npm: watch:web:esbuild"],
      		"presentation": {
        		"reveal": "never"
      		},
      		"group": {
        		"kind": "build",
        		"isDefault": true
      		}
    	},
    	{
      		"type": "npm",
      		"script": "watch:web:esbuild",
      		"group": "build",
      		"problemMatcher": "$esbuild-watch",
      		"isBackground": true,
      		"label": "npm: watch:web:esbuild",
      		"presentation": {
        		"group": "watch",
        		"reveal": "always"
      		}
    	},
    	{
      		"type": "npm",
      		"script": "watch:web:tsc",
      		"group": "build",
      		"problemMatcher": "$tsc-watch",
      		"isBackground": true,
      		"label": "npm: watch:web:tsc",
      		"presentation": {
        		"group": "watch",
        		"reveal": "always"
      		}
    	},
		{
			"label": "Publish extension",
			"type": "shell",
			"command": "vsce publish ${input:version} --allow-star-activation",
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "version",
			"description": "Bump which version?",
			"type": "pickString",
			"default": "patch",
			"options": [ "patch", "minor", "major" ]
		}
	]
}