{
    // NeuroPilot settings
    "neuropilot.permission.editActiveDocument": true,
    "neuropilot.permission.openFiles": true,
    "neuropilot.permission.runTasks": true,
    "neuropilot.permission.create": true,
    "neuropilot.permission.delete": true,
    "neuropilot.permission.rename": true,
    "neuropilot.permission.gitRemotes": true,
    "neuropilot.permission.gitTags": true,
    "neuropilot.permission.gitOperations": true,
    "neuropilot.permission.gitConfigs": true,
    "neuropilot.allowUnsafePaths": false,
    "neuropilot.showTimeOnTerminalStart": true,
    "neuropilot.permission.terminalAccess": true,
    "neuropilot.permission.accessLintingAnalysis": true,
    "neuropilot.terminals": [
        {
            "name": "PowerShell",
            "path": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
            "args": []
        },
        {
            "name": "Command Prompt",
            "path": "C:\\Windows\\System32\\cmd.exe",
            "args": ["/K"]
        },
        {
            "name": "Git Bash",
            "path": "C:\\Program Files\\Git\\bin\\bash.exe",
            "args": ["-i"]
        }
    ],
    "neuropilot.sendNewLintingProblemsOn": "inCurrentFile",

    // Debug engine override for GitHub Copilot
    "github.copilot.advanced": {
        "debug.overrideEngine": "someRandomString"
    },

    // VS Code settings
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
}